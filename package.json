{
    "name": "productcontentdesktopapp",
    "productName": "Product Content App",
    "version": "2.1.0",
    "description": "Desktop App for Product Content Team",
    "main": "src/main.js",
    "dependencies": {
        "core-js": "^3.6.5",
        "csvtojson": "^2.0.10",
        "prop-types": "^15.8.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-loading": "^2.0.3",
        "regenerator-runtime": "^0.13.7",
        "spellchecker": "^3.7.1",
        "xlsx": "file:./vendor/xlsx-latest.tgz"
    },
    "devDependencies": {
        "@babel/core": "^7.11.1",
        "@babel/preset-env": "^7.11.0",
        "@babel/preset-react": "^7.10.4",
        "@types/express": "^4.17.13",
        "@webpack-cli/serve": "^1.6.1",
        "babel-loader": "^8.1.0",
        "concurrently": "^5.3.0",
        "css-loader": "^4.2.1",
        "electron": "15.0.0",
        "electron-builder": "^22.9.1",
        "electron-rebuild": "^3.2.7",
        "file-loader": "^6.2.0",
        "sass": "^1.26.10",
        "sass-loader": "^10.0.2",
        "style-loader": "^1.2.1",
        "wait-on": "^5.2.0",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^4.7.3"
    },
    "scripts": {
        "dev": "webpack-dev-server --mode development --hot",
        "build": "webpack",
        "start": "yarn run build && electron .",
        "dev-start": "node CLI/concurrent.js",
        "dist": "yarn run build && yarn run rebuild && electron-builder",
        "rebuild": "electron-rebuild"
    },
    "author": "Kevin Ness",
    "license": "MIT",
    "build": {
        "productName": "Product Content App",
        "npmRebuild": false,
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "AppIcon.ico"
        },
        "directories": {
            "output": "dist"
        },
        "nsis": {
            "installerIcon": "AppIcon.ico",
            "uninstallerIcon": "AppIcon.ico",
            "license": "LICENSE",
            "runAfterFinish": true
        },
        "mac": {
            "target": "dmg",
            "icon": "MacAppIcon.icns"
        }
    },
    "packageManager": "yarn@3.2.1"
